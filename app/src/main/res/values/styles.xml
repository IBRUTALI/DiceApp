<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Custom progress bar style. -->
    <style name="CustomProgressBarHorizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">12dip</item>
        <item name="android:maxHeight">12dip</item>
        <item name="android:scaleY">3</item>
    </style>

    <!-- TextView fonts. -->
    <style name="MainTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/didact_gothic_regular</item>
    </style>

    <!-- Text style. -->
    <style name="Text">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/didact_gothic_regular</item>
    </style>

    <!-- Edit text error colors. -->
    <style name="Text.ErrorText">
        <item name="android:textColor">@color/red_lite</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Hint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.OnCard">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Normal">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Subnormal">
        <item name="android:textSize">14sp</item>
    </style>

</resources>